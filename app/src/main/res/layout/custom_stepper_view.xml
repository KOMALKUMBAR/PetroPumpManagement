<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_step_1"
            app:layout_constraintRight_toLeftOf="@+id/ll_step_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

                <include
                    android:id="@+id/step_view1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/single_step_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_step_2"
            app:layout_constraintRight_toLeftOf="@+id/ll_step_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ll_step_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

                <include
                    android:id="@+id/step_view2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/single_step_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_step_3"
            app:layout_constraintRight_toLeftOf="@+id/ll_step_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ll_step_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

                <include
                    android:id="@+id/step_view3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/single_step_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_step_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ll_step_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

                <include
                    android:id="@+id/step_view4"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/single_step_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>